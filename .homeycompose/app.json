{
  "id": "com.servarr.flowcontrol",
  "version": "1.7.7",
  "compatibility": ">=12.3.0",
  "sdk": 3,
  "name": {
    "en": "Servarr Control Hub"
  },
  "description": {
    "en": "Lightweight monitoring and control hub for Servarr suite (Radarr, Sonarr, Lidarr). Works with Servarr on any platform (Docker, native, Unraid, etc.)"
  },
  "category": [
    "tools"
  ],
  "permissions": [
    "homey:manager:api"
  ],
  "platforms": [
    "local"
  ],
  "images": {
    "small": "/assets/images/small.png",
    "large": "/assets/images/large.png",
    "xlarge": "/assets/images/xlarge.png"
  },
  "author": {
    "name": "Jos Visser",
    "email": "qballjos@gmail.com"
  },
  "homepage": "https://josvisserict.nl",
  "support": "https://github.com/Qballjos/Homey-Servarr/issues",
  "brandColor": "#4B0082",
  "tags": {
    "en": [
      "servarr",
      "radarr",
      "sonarr",
      "lidarr",
      "media",
      "monitoring"
    ]
  },
  "api": {
    "getWidgetCalendar": {
      "method": "GET",
      "path": "/widgets/calendar"
    },
    "getWidgetHealth": {
      "method": "GET",
      "path": "/widgets/health"
    },
    "getWidgetLibrary": {
      "method": "GET",
      "path": "/widgets/library"
    },
    "getWidgetQueue": {
      "method": "GET",
      "path": "/widgets/queue"
    },
    "getWidgetAgenda": {
      "method": "GET",
      "path": "/widgets/agenda"
    },
    "pauseQueue": {
      "method": "POST",
      "path": "/widgets/queue/pause"
    },
    "resumeQueue": {
      "method": "POST",
      "path": "/widgets/queue/resume"
    },
    "refreshApp": {
      "method": "POST",
      "path": "/widgets/queue/refresh"
    },
    "logWidget": {
      "method": "POST",
      "path": "/widgets/log"
    }
  }
}