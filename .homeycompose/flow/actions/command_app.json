{
  "id": "command_app",
  "title": {
    "en": "Run command on [APP]"
  },
  "titleFormatted": {
    "en": "Run [[command]] on [[app]]"
  },
  "args": [
    {
      "name": "device",
      "type": "device",
      "filter": "driver_id=servarr_hub"
    },
    {
      "name": "app",
      "type": "dropdown",
      "label": {
        "en": "Servarr App"
      },
      "values": [
        { "id": "radarr", "label": { "en": "Radarr" } },
        { "id": "sonarr", "label": { "en": "Sonarr" } },
        { "id": "lidarr", "label": { "en": "Lidarr" } },
        { "id": "prowlarr", "label": { "en": "Prowlarr" } }
      ]
    },
    {
      "name": "command",
      "type": "dropdown",
      "label": {
        "en": "Command"
      },
      "values": [
        { "id": "RefreshMonitoredDownloads", "label": { "en": "Refresh Downloads" } },
        { "id": "RescanMovie", "label": { "en": "Rescan Movies (Radarr)" } },
        { "id": "RescanSeries", "label": { "en": "Rescan Series (Sonarr)" } },
        { "id": "RescanAlbum", "label": { "en": "Rescan Albums (Lidarr)" } },
        { "id": "ApplicationUpdateCheck", "label": { "en": "Check for Updates" } },
        { "id": "Backup", "label": { "en": "Backup Database" } }
      ]
    }
  ]
}
