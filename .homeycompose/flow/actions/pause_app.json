{
  "id": "pause_app",
  "title": {
    "en": "Pause [APP] Downloads"
  },
  "titleFormatted": {
    "en": "Pause downloads for [[app]]"
  },
  "args": [
    {
      "name": "device",
      "type": "device",
      "filter": "driver_id=servarr_hub"
    },
    {
      "name": "app",
      "type": "dropdown",
      "label": {
        "en": "Servarr App"
      },
      "values": [
        { "id": "radarr", "label": { "en": "Radarr" } },
        { "id": "sonarr", "label": { "en": "Sonarr" } },
        { "id": "lidarr", "label": { "en": "Lidarr" } }
      ]
    }
  ]
}
