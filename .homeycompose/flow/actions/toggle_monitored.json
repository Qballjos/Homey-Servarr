{
  "id": "toggle_monitored",
  "title": {
    "en": "Toggle monitored status"
  },
  "titleFormatted": {
    "en": "Toggle monitored status ([[monitored]]) for [[title]] in [[app]]"
  },
  "args": [
    {
      "name": "device",
      "type": "device",
      "filter": "driver_id=servarr_hub"
    },
    {
      "name": "app",
      "type": "dropdown",
      "label": {
        "en": "Servarr App"
      },
      "values": [
        { "id": "radarr", "label": { "en": "Radarr" } },
        { "id": "sonarr", "label": { "en": "Sonarr" } },
        { "id": "lidarr", "label": { "en": "Lidarr" } }
      ]
    },
    {
      "name": "title",
      "type": "text",
      "label": {
        "en": "Media Title"
      }
    },
    {
      "name": "monitored",
      "type": "dropdown",
      "label": {
        "en": "Monitored Status"
      },
      "values": [
        { "id": "true", "label": { "en": "Enable monitoring" } },
        { "id": "false", "label": { "en": "Disable monitoring" } }
      ]
    }
  ]
}
