{
  "id": "grab_event",
  "title": {
    "en": "A release has been grabbed"
  },
  "titleFormatted": {
    "en": "Grabbed: [[title]] from [[app]]"
  },
  "args": [
    {
      "name": "device",
      "type": "device",
      "filter": "driver_id=servarr_hub"
    },
    {
      "name": "title",
      "type": "text",
      "label": {
        "en": "Media Title"
      }
    },
    {
      "name": "app",
      "type": "dropdown",
      "label": {
        "en": "Servarr App"
      },
      "values": [
        { "id": "radarr", "label": { "en": "Radarr" } },
        { "id": "sonarr", "label": { "en": "Sonarr" } },
        { "id": "lidarr", "label": { "en": "Lidarr" } },
        { "id": "prowlarr", "label": { "en": "Prowlarr" } }
      ]
    }
  ]
}
