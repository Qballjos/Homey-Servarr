{
  "id": "com.servarr.flowcontrol",
  "version": "1.0.0",
  "compatibility": ">=5.0.0",
  "sdk": 3,
  "name": {
    "en": "Servarr Flow Control"
  },
  "description": {
    "en": "Lightweight monitoring and Flow bridge for Servarr suite (Radarr, Sonarr, Lidarr). Works with Servarr on any platform (Docker, native, Unraid, etc.)"
  },
  "category": [
    "tools"
  ],
  "permissions": [],
  "images": {
    "small": "/assets/images/small.png",
    "large": "/assets/images/large.png",
    "xlarge": "/assets/images/xlarge.png"
  },
  "author": {
    "name": "Servarr Flow Control"
  },
  "brandColor": "#4B0082",
  "tags": {
    "en": [
      "servarr",
      "radarr",
      "sonarr",
      "lidarr",
      "media",
      "monitoring"
    ]
  },
  "drivers": [
    {
      "id": "servarr_hub",
      "name": {
        "en": "Servarr Control Hub"
      },
      "class": "other",
      "capabilities": [],
      "images": {
        "small": "/drivers/servarr_hub/assets/images/small.png",
        "large": "/drivers/servarr_hub/assets/images/large.png"
      },
      "pair": [
        {
          "id": "setup"
        }
      ],
      "widgets": [
        {
          "id": "release_agenda",
          "title": {
            "en": "Release Agenda Today"
          },
          "capabilities": [
            "text_today_releases"
          ]
        },
        {
          "id": "downloads_panel",
          "title": {
            "en": "Downloads & Action Panel"
          },
          "capabilities": [
            "measure_queue_count"
          ]
        }
      ]
    }
  ],
  "flow": {
    "triggers": [
      {
        "id": "download_finished",
        "title": {
          "en": "A download has finished"
        },
        "titleFormatted": {
          "en": "Download finished: [[title]] ([[app]])"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=servarr_hub"
          },
          {
            "name": "title",
            "type": "text",
            "label": {
              "en": "Media Title"
            }
          },
          {
            "name": "app",
            "type": "dropdown",
            "label": {
              "en": "Servarr App"
            },
            "values": [
              {
                "id": "radarr",
                "label": {
                  "en": "Radarr"
                }
              },
              {
                "id": "sonarr",
                "label": {
                  "en": "Sonarr"
                }
              },
              {
                "id": "lidarr",
                "label": {
                  "en": "Lidarr"
                }
              }
            ]
          }
        ]
      },
      {
        "id": "queue_empty",
        "title": {
          "en": "The queue is empty"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=servarr_hub"
          }
        ]
      },
      {
        "id": "health_check_failed",
        "title": {
          "en": "Health check failed"
        },
        "titleFormatted": {
          "en": "Health check [[type]] for [[app]]: [[message]]"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=servarr_hub"
          },
          {
            "name": "app",
            "type": "dropdown",
            "label": {
              "en": "Servarr App"
            },
            "values": [
              {
                "id": "radarr",
                "label": {
                  "en": "Radarr"
                }
              },
              {
                "id": "sonarr",
                "label": {
                  "en": "Sonarr"
                }
              },
              {
                "id": "lidarr",
                "label": {
                  "en": "Lidarr"
                }
              }
            ]
          },
          {
            "name": "message",
            "type": "text",
            "label": {
              "en": "Health Message"
            }
          },
          {
            "name": "type",
            "type": "dropdown",
            "label": {
              "en": "Health Type"
            },
            "values": [
              {
                "id": "error",
                "label": {
                  "en": "Error"
                }
              },
              {
                "id": "warning",
                "label": {
                  "en": "Warning"
                }
              }
            ]
          }
        ]
      }
    ],
    "actions": [
      {
        "id": "pause_all",
        "title": {
          "en": "Pause all Servarr Downloads"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=servarr_hub"
          }
        ]
      },
      {
        "id": "resume_all",
        "title": {
          "en": "Resume all Servarr Downloads"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=servarr_hub"
          }
        ]
      },
      {
        "id": "pause_app",
        "title": {
          "en": "Pause [APP] Downloads"
        },
        "titleFormatted": {
          "en": "Pause downloads for [[app]]"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=servarr_hub"
          },
          {
            "name": "app",
            "type": "dropdown",
            "label": {
              "en": "Servarr App"
            },
            "values": [
              {
                "id": "radarr",
                "label": {
                  "en": "Radarr"
                }
              },
              {
                "id": "sonarr",
                "label": {
                  "en": "Sonarr"
                }
              },
              {
                "id": "lidarr",
                "label": {
                  "en": "Lidarr"
                }
              }
            ]
          }
        ]
      },
      {
        "id": "resume_app",
        "title": {
          "en": "Resume [APP] Downloads"
        },
        "titleFormatted": {
          "en": "Resume downloads for [[app]]"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=servarr_hub"
          },
          {
            "name": "app",
            "type": "dropdown",
            "label": {
              "en": "Servarr App"
            },
            "values": [
              {
                "id": "radarr",
                "label": {
                  "en": "Radarr"
                }
              },
              {
                "id": "sonarr",
                "label": {
                  "en": "Sonarr"
                }
              },
              {
                "id": "lidarr",
                "label": {
                  "en": "Lidarr"
                }
              }
            ]
          }
        ]
      }
    ]
  }
}

