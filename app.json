{
  "id": "com.servarr.flowcontrol",
  "version": "1.0.0",
  "compatibility": ">=12.3.0",
  "sdk": 3,
  "name": {
    "en": "Servarr Control Hub"
  },
  "description": {
    "en": "Lightweight monitoring and control hub for Servarr suite (Radarr, Sonarr, Lidarr). Works with Servarr on any platform (Docker, native, Unraid, etc.)"
  },
  "category": [
    "tools"
  ],
  "permissions": [],
  "platforms": [
    "local"
  ],
  "images": {
    "small": "/assets/images/small.png",
    "large": "/assets/images/large.png",
    "xlarge": "/assets/images/xlarge.png"
  },
  "author": {
    "name": "Jos Visser",
    "email": "qballjos@gmail.com"
  },
  "homepage": "https://josvisserict.nl",
  "support": "https://github.com/Qballjos/Homey-Servarr/issues",
  "brandColor": "#4B0082",
  "tags": {
    "en": [
      "servarr",
      "radarr",
      "sonarr",
      "lidarr",
      "media",
      "monitoring"
    ]
  },
  "capabilities": {
    "text_today_releases": {
      "type": "string",
      "title": { "en": "Releases Today" },
      "getable": true,
      "setable": false,
      "uiComponent": "sensor",
      "icon": "/assets/icon.svg"
    },
    "measure_queue_count": {
      "type": "number",
      "title": { "en": "Queue Items" },
      "getable": true,
      "setable": false,
      "decimals": 0,
      "uiComponent": "sensor",
      "icon": "/assets/icon.svg"
    },
    "measure_missing_count": {
      "type": "number",
      "title": { "en": "Missing Items" },
      "getable": true,
      "setable": false,
      "decimals": 0,
      "uiComponent": "sensor",
      "icon": "/assets/icon.svg"
    },
    "queue_paused": {
      "type": "boolean",
      "title": { "en": "Queue Paused" },
      "getable": true,
      "setable": false,
      "uiComponent": "sensor",
      "icon": "/assets/icon.svg"
    },
    "measure_library_size": {
      "type": "number",
      "title": { "en": "Library Size" },
      "getable": true,
      "setable": false,
      "decimals": 0,
      "uiComponent": "sensor",
      "icon": "/assets/icon.svg"
    }
  },
  "drivers": [
    {
      "id": "servarr_hub",
      "name": {
        "en": "Servarr Control Hub"
      },
      "class": "other",
      "capabilities": [
        "text_today_releases",
        "measure_queue_count",
        "measure_missing_count",
        "queue_paused",
        "measure_library_size"
      ],
      "images": {
        "small": "/drivers/servarr_hub/assets/images/small.png",
        "large": "/drivers/servarr_hub/assets/images/large.png"
      },
      "settings": [
        {
          "id": "manual_refresh_only",
          "type": "checkbox",
          "label": { "en": "Manual refresh only" },
          "value": false,
          "hint": {
            "en": "Skip scheduled polling, refresh via widgets only"
          }
        },
        {
          "id": "radarr_group",
          "type": "group",
          "label": { "en": "Radarr" },
          "children": [
            {
              "id": "radarr_enabled",
              "type": "checkbox",
              "label": { "en": "Enable Radarr" },
              "value": false
            },
            {
              "id": "radarr_url",
              "type": "text",
              "label": { "en": "Base URL" },
              "value": "",
              "hint": {
                "en": "e.g. http://192.168.1.100 or https://radarr.example.com"
              }
            },
            {
              "id": "radarr_port",
              "type": "number",
              "label": { "en": "Port" },
              "value": 7878,
              "min": 1,
              "max": 65535
            },
            {
              "id": "radarr_api_key",
              "type": "password",
              "label": { "en": "API Key" },
              "value": ""
            }
          ]
        },
        {
          "id": "sonarr_group",
          "type": "group",
          "label": { "en": "Sonarr" },
          "children": [
            {
              "id": "sonarr_enabled",
              "type": "checkbox",
              "label": { "en": "Enable Sonarr" },
              "value": false
            },
            {
              "id": "sonarr_url",
              "type": "text",
              "label": { "en": "Base URL" },
              "value": "",
              "hint": {
                "en": "e.g. http://192.168.1.100 or https://sonarr.example.com"
              }
            },
            {
              "id": "sonarr_port",
              "type": "number",
              "label": { "en": "Port" },
              "value": 8989,
              "min": 1,
              "max": 65535
            },
            {
              "id": "sonarr_api_key",
              "type": "password",
              "label": { "en": "API Key" },
              "value": ""
            }
          ]
        },
        {
          "id": "lidarr_group",
          "type": "group",
          "label": { "en": "Lidarr" },
          "children": [
            {
              "id": "lidarr_enabled",
              "type": "checkbox",
              "label": { "en": "Enable Lidarr" },
              "value": false
            },
            {
              "id": "lidarr_url",
              "type": "text",
              "label": { "en": "Base URL" },
              "value": "",
              "hint": {
                "en": "e.g. http://192.168.1.100 or https://lidarr.example.com"
              }
            },
            {
              "id": "lidarr_port",
              "type": "number",
              "label": { "en": "Port" },
              "value": 8686,
              "min": 1,
              "max": 65535
            },
            {
              "id": "lidarr_api_key",
              "type": "password",
              "label": { "en": "API Key" },
              "value": ""
            }
          ]
        }
      ],
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ]
    }
  ],
  "flow": {
    "triggers": [
      {
        "id": "download_finished",
        "title": {
          "en": "A download has finished"
        },
        "titleFormatted": {
          "en": "Download finished: [[title]] ([[app]])"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=servarr_hub"
          },
          {
            "name": "title",
            "type": "text",
            "label": {
              "en": "Media Title"
            }
          },
          {
            "name": "app",
            "type": "dropdown",
            "label": {
              "en": "Servarr App"
            },
            "values": [
              {
                "id": "radarr",
                "label": {
                  "en": "Radarr"
                }
              },
              {
                "id": "sonarr",
                "label": {
                  "en": "Sonarr"
                }
              },
              {
                "id": "lidarr",
                "label": {
                  "en": "Lidarr"
                }
              }
            ]
          }
        ]
      },
      {
        "id": "queue_empty",
        "title": {
          "en": "The queue is empty"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=servarr_hub"
          }
        ]
      },
      {
        "id": "health_check_failed",
        "title": {
          "en": "Health check failed"
        },
        "titleFormatted": {
          "en": "Health check [[type]] for [[app]]: [[message]]"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=servarr_hub"
          },
          {
            "name": "app",
            "type": "dropdown",
            "label": {
              "en": "Servarr App"
            },
            "values": [
              {
                "id": "radarr",
                "label": {
                  "en": "Radarr"
                }
              },
              {
                "id": "sonarr",
                "label": {
                  "en": "Sonarr"
                }
              },
              {
                "id": "lidarr",
                "label": {
                  "en": "Lidarr"
                }
              }
            ]
          },
          {
            "name": "message",
            "type": "text",
            "label": {
              "en": "Health Message"
            }
          },
          {
            "name": "type",
            "type": "dropdown",
            "label": {
              "en": "Health Type"
            },
            "values": [
              {
                "id": "error",
                "label": {
                  "en": "Error"
                }
              },
              {
                "id": "warning",
                "label": {
                  "en": "Warning"
                }
              }
            ]
          }
        ]
      },
      {
        "id": "media_added",
        "title": {
          "en": "A media item was added"
        },
        "titleFormatted": {
          "en": "[[type]] added: [[title]] ([[app]])"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=servarr_hub"
          },
          {
            "name": "title",
            "type": "text",
            "label": {
              "en": "Media Title"
            }
          },
          {
            "name": "app",
            "type": "dropdown",
            "label": {
              "en": "Servarr App"
            },
            "values": [
              {
                "id": "radarr",
                "label": {
                  "en": "Radarr"
                }
              },
              {
                "id": "sonarr",
                "label": {
                  "en": "Sonarr"
                }
              },
              {
                "id": "lidarr",
                "label": {
                  "en": "Lidarr"
                }
              }
            ]
          },
          {
            "name": "type",
            "type": "dropdown",
            "label": {
              "en": "Media Type"
            },
            "values": [
              { "id": "movie", "label": { "en": "Movie" } },
              { "id": "series", "label": { "en": "Series" } },
              { "id": "album", "label": { "en": "Album" } },
              { "id": "artist", "label": { "en": "Artist" } }
            ]
          }
        ]
      }
    ],
    "actions": [
      {
        "id": "pause_all",
        "title": {
          "en": "Pause all Servarr Downloads"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=servarr_hub"
          }
        ]
      },
      {
        "id": "resume_all",
        "title": {
          "en": "Resume all Servarr Downloads"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=servarr_hub"
          }
        ]
      },
      {
        "id": "pause_app",
        "title": {
          "en": "Pause [APP] Downloads"
        },
        "titleFormatted": {
          "en": "Pause downloads for [[app]]"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=servarr_hub"
          },
          {
            "name": "app",
            "type": "dropdown",
            "label": {
              "en": "Servarr App"
            },
            "values": [
              {
                "id": "radarr",
                "label": {
                  "en": "Radarr"
                }
              },
              {
                "id": "sonarr",
                "label": {
                  "en": "Sonarr"
                }
              },
              {
                "id": "lidarr",
                "label": {
                  "en": "Lidarr"
                }
              }
            ]
          }
        ]
      },
      {
        "id": "resume_app",
        "title": {
          "en": "Resume [APP] Downloads"
        },
        "titleFormatted": {
          "en": "Resume downloads for [[app]]"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=servarr_hub"
          },
          {
            "name": "app",
            "type": "dropdown",
            "label": {
              "en": "Servarr App"
            },
            "values": [
              {
                "id": "radarr",
                "label": {
                  "en": "Radarr"
                }
              },
              {
                "id": "sonarr",
                "label": {
                  "en": "Sonarr"
                }
              },
              {
                "id": "lidarr",
                "label": {
                  "en": "Lidarr"
                }
              }
            ]
          }
        ]
      },
      {
        "id": "search_missing",
        "title": {
          "en": "Search missing items for [APP]"
        },
        "titleFormatted": {
          "en": "Search missing items for [[app]]"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=servarr_hub"
          },
          {
            "name": "app",
            "type": "dropdown",
            "label": {
              "en": "Servarr App"
            },
            "values": [
              {
                "id": "radarr",
                "label": {
                  "en": "Radarr"
                }
              },
              {
                "id": "sonarr",
                "label": {
                  "en": "Sonarr"
                }
              },
              {
                "id": "lidarr",
                "label": {
                  "en": "Lidarr"
                }
              }
            ]
          }
        ]
      },
      {
        "id": "toggle_monitored",
        "title": {
          "en": "Toggle monitored status"
        },
        "titleFormatted": {
          "en": "Toggle monitored status ([[monitored]]) for [[title]] in [[app]]"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=servarr_hub"
          },
          {
            "name": "app",
            "type": "dropdown",
            "label": {
              "en": "Servarr App"
            },
            "values": [
              {
                "id": "radarr",
                "label": {
                  "en": "Radarr"
                }
              },
              {
                "id": "sonarr",
                "label": {
                  "en": "Sonarr"
                }
              },
              {
                "id": "lidarr",
                "label": {
                  "en": "Lidarr"
                }
              }
            ]
          },
          {
            "name": "title",
            "type": "text",
            "label": {
              "en": "Media Title"
            }
          },
          {
            "name": "monitored",
            "type": "dropdown",
            "label": {
              "en": "Monitored Status"
            },
            "values": [
              {
                "id": "true",
                "label": {
                  "en": "Enable monitoring"
                }
              },
              {
                "id": "false",
                "label": {
                  "en": "Disable monitoring"
                }
              }
            ]
          }
        ]
      }
    ]
  }
}

